---
import {ViewTransitions} from 'astro:transitions';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const {title, description} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Hypr MCP</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ViewTransitions />
  </head>
  <body>
    <div class="page sl-flex">
      <!-- Header -->
      <header class="sl-flex">
        <div class="header sl-flex">
          <div class="sl-flex">
            <a href="/" class="site-title sl-flex">
              <img
                src="/src/assets/hyprmcp-black.svg"
                alt="Hypr MCP"
                class="dark:hidden"
                width="120"
                height="40"
              />
              <img
                src="/src/assets/hyprmcp-white.svg"
                alt="Hypr MCP"
                class="hidden dark:block"
                width="120"
                height="40"
              />
            </a>
          </div>
          <nav class="sl-flex">
            <ul class="sl-flex">
              <li><a href="/">Home</a></li>
              <li><a href="/pricing/">Pricing</a></li>
              <li><a href="/docs/getting-started/">Docs</a></li>
              <li>
                <a
                  href="/blog/"
                  aria-current={Astro.url.pathname.startsWith('/blog/')
                    ? 'page'
                    : undefined}>Blog</a>
              </li>
            </ul>
          </nav>
        </div>
      </header>

      <!-- Main content -->
      <div class="main-frame">
        <div class="lg:sl-flex">
          <main class="main-pane">
            <div class="content-panel">
              <div class="sl-container">
                <main class="content">
                  <slot />
                </main>
              </div>
            </div>
          </main>
        </div>
      </div>
    </div>

    <style>
      body {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          'Segoe UI',
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          'Open Sans',
          'Helvetica Neue',
          sans-serif;
        margin: 0;
        padding: 0;
        background: var(--sl-color-bg);
        color: var(--sl-color-text);
      }

      .page {
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        border-bottom: 1px solid var(--sl-color-hairline);
        padding: 1rem 2rem;
        background: var(--sl-color-bg-nav);
      }

      .header {
        width: 100%;
        justify-content: space-between;
        align-items: center;
      }

      .site-title {
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        color: var(--sl-color-text);
        font-weight: 600;
        font-size: 1.25rem;
      }

      nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 2rem;
        align-items: center;
      }

      nav a {
        color: var(--sl-color-text);
        text-decoration: none;
        padding: 0.5rem 0;
      }

      nav a:hover {
        color: var(--sl-color-text-accent);
      }

      nav a[aria-current='page'] {
        color: var(--sl-color-text-accent);
        font-weight: 600;
      }

      .main-frame {
        flex: 1;
        padding: 2rem 0;
      }

      .main-pane {
        width: 100%;
      }

      .content {
        max-width: 100%;
      }

      .sl-flex {
        display: flex;
      }

      .sl-container {
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        padding: 0 1rem;
      }

      @media (min-width: 50rem) {
        .sl-container {
          padding: 0 2rem;
        }
      }
    </style>
  </body>
</html>
