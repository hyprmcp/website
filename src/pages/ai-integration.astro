---
import StandaloneLayout from '../layouts/StandaloneLayout.astro';
import McpNavigation from '../components/lp/mcp/McpNavigation.astro';
import McpHeroSection from '../components/lp/mcp/McpHeroSection.astro';
import McpWhatIs from '../components/lp/mcp/McpWhatIs.astro';
import McpHowWeHelp from '../components/lp/mcp/McpHowWeHelp.astro';
import McpVideoDemo from '../components/lp/mcp/McpVideoDemo.astro';
import McpPricing from '../components/lp/mcp/McpPricing.astro';
import McpSocialProof from '../components/lp/mcp/McpSocialProof.astro';
import McpCTA from '../components/lp/mcp/McpCTA.astro';

const pageTitle = 'Hypr MCP - Connect Your Application to AI';
const pageDescription =
  'Your app is invisible to AI agents and chatbots. MCP changes that - enabling direct AI integration for instant automation, enhanced user experiences, and competitive advantage.';
const ctaHref = 'https://tally.so/r/3ql2o2';
const demoHref = 'https://cal.glasskube.com/team/hyprmcp/ai-integration';
const navLinks = [
  {href: '#how-we-help', text: 'How We Help'},
  {href: '#demo', text: 'Demo'},
  {href: '#pricing', text: 'Pricing'},
];
---

<StandaloneLayout
  title={pageTitle}
  description={pageDescription}
  ogUrl="https://hyprmcp.com/ai-integration/"
  footerTagline="Connect your Application to AI. We build, host, and monitor your MCP servers."
  footerLinks={navLinks}>
  <McpNavigation navLinks={navLinks} ctaHref={ctaHref} demoHref={demoHref} />

  <McpHeroSection
    title="Connect your Application to AI"
    description="Right now, your app is invisible to AI Chatbot & agents. MCP changes that."
    ctaHref={ctaHref}
    demoHref={demoHref}
  />

  <McpWhatIs />

  <McpHowWeHelp />

  <McpVideoDemo />

  <McpPricing
    serverLabel="1 MCP server"
    analyticsLabel="Hosting & monitoring"
  />

  <McpSocialProof />

  <McpCTA
    title="Ready to connect your app to AI?"
    subtitle="Get started in minutes, not weeks"
    ctaHref={ctaHref}
    demoHref={demoHref}
  />
</StandaloneLayout>
