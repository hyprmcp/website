---
import StandaloneLayout from '../layouts/StandaloneLayout.astro';
import AnalyticsHero from '../components/lp/analytics/AnalyticsHero.astro';
import AnalyticsGatewayInstallation from '../components/lp/analytics/AnalyticsGatewayInstallation.astro';
import AnalyticsGatewayFlowChart from '../components/lp/analytics/AnalyticsGatewayFlowChart.astro';
import AnalyticsFeatures from '../components/lp/analytics/AnalyticsFeatures.astro';
import AnalyticsMetricsShowcase from '../components/lp/analytics/AnalyticsMetricsShowcase.astro';
import AnalyticsCTA from '../components/lp/analytics/AnalyticsCTA.astro';

const pageTitle = 'Hypr MCP Analytics - Turn the lights on for your MCP server';
const pageDescription =
  'Understand how users interact with your Model Context Protocol servers. Get deep insights into prompts, tool usage, and user behavior patterns with Hypr MCP Analytics Gateway.';
---

<StandaloneLayout
  title={pageTitle}
  description={pageDescription}
  ogUrl="https://hyprmcp.com/mcp-analytics/"
  footerTagline="Analytics Gateway - Built for MCP developers and product managers."
  footerLinks={[
    {href: '#analytics-gateway', text: 'Analytics Gateway'},
    {href: '#how-it-works', text: 'How It Works'},
    {href: '#simple-integration', text: 'Simple Integration'},
  ]}>
  <AnalyticsHero />
  <AnalyticsGatewayFlowChart />
  <AnalyticsCTA />
  <AnalyticsMetricsShowcase />
  <AnalyticsFeatures />
  <AnalyticsGatewayInstallation />
  <AnalyticsCTA />
</StandaloneLayout>
