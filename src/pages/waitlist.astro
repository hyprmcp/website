---
import StandaloneLayout from '../layouts/StandaloneLayout.astro';
import WaitlistSection from '../components/WaitlistSection.astro';

const pageTitle = 'Join Jetski Waitlist - Get Early Access to MCP Platform';
const pageDescription =
  'Join Jetski waitlist for early access to serverless MCP hosting. Be first to deploy Model Context Protocol servers with one command. Beta soon.';
