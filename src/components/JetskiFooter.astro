---
import {Icon} from '@astrojs/starlight/components';
import ThemedImage from './util/ThemedImage.astro';
import jetskiBlack from '../assets/jetski-black.svg';
import jetskiWhite from '../assets/jetski-white.svg';
---

<footer class="border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">

    {/* Main footer content */}
    <div class="grid grid-cols-2 gap-8 lg:grid-cols-6">

      {/* Logo and description */}
      <div class="col-span-2 lg:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <ThemedImage 
            lightSrc={jetskiBlack} 
            darkSrc={jetskiWhite} 
            alt="Jetski Logo" 
            class="w-6 h-6"
            width={24}
            height={24}
          />
          <span class="text-xl font-bold text-gray-900 dark:text-white">Jetski</span>
        </div>
        <p class="text-sm text-gray-500 dark:text-gray-400 max-w-xs leading-relaxed">
          Deploy and scale MCP servers with confidence. The serverless hosting platform for Model Context Protocol.
        </p>
      </div>

      {/* Product */}
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">
          Product
        </h3>
        <ul class="space-y-3 text-sm list-none pl-0">
          <li>
            <a href="/pricing" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
              Pricing
            </a>
          </li>
          <li>
            <a href="/docs/getting-started/" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
              Documentation
            </a>
          </li>
        </ul>
      </div>

      {/* Resources */}
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">
          Resources
        </h3>
        <ul class="space-y-3 text-sm list-none pl-0">
          <li>
            <a href="https://modelcontextprotocol.io/" target="_blank" rel="noopener noreferrer" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
              About MCP
            </a>
          </li>

        </ul>
      </div>

      {/* Company */}
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">
          Company
        </h3>
        <ul class="space-y-3 text-sm list-none pl-0">
          <li>
            <a href="https://www.workatastartup.com/companies/glasskube" target="_blank" rel="noopener noreferrer" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
              Carrers
            </a>
          </li>
          <li>
            <a href="https://glasskube.dev/contact/" target="_blank" rel="noopener noreferrer" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
              Contact
            </a>
          </li>
        </ul>
      </div>

      {/* Legal */}
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-4">
          Partner
        </h3>
        <ul class="space-y-3 text-sm list-none pl-0">
          <li>
            <a href="https://www.ycombinator.com/companies/glasskube" target="_blank" rel="noopener noreferrer" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
              Y Combinator
            </a>
          </li>
        </ul>
      </div>
    </div>

    {/* Bottom section */}
    <div class="mt-16 pt-8">
      <div class="flex flex-col-reverse sm:flex-row justify-between items-center">

        {/* Copyright */}
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-4 sm:mt-0">
          Â© 2025 Glasskube, Inc.
        </p>

        {/* Social Links */}
        <div class="flex space-x-6">
          <a href="https://x.com/glasskube" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
            <span class="sr-only">X (Twitter)</span>
            <Icon name="x.com" class="w-5 h-5" />
          </a>
          <a href="https://github.com/glasskube" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
            <span class="sr-only">GitHub</span>
            <Icon name="github" class="w-5 h-5" />
          </a>
          <a href="https://discord.gg/glasskube" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
            <span class="sr-only">Discord</span>
            <Icon name="discord" class="w-5 h-5" />
          </a>
          <a href="https://linkedin.com/company/glasskube" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
            <span class="sr-only">LinkedIn</span>
            <Icon name="linkedin" class="w-5 h-5" />
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
