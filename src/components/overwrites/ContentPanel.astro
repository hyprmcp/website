---
const {starlightRoute} = Astro.locals;
const isSplashTemplate = starlightRoute.entry.data.template === 'splash';
---

{
  !isSplashTemplate && (
    <div class="content-panel" class:list={[{'no-border': isSplashTemplate}]}>
      <div class="sl-container">
        <slot />
      </div>
    </div>
  )
}
{isSplashTemplate && <slot />}

<style>
  @layer starlight.core {
    .content-panel {
      padding: 1.5rem var(--sl-content-pad-x);
    }

    .content-panel + .content-panel:not(.no-border) {
      border-top: 1px solid var(--sl-color-hairline);
    }

    .sl-container {
      max-width: var(--sl-content-width);
    }

    .sl-container > :global(* + *) {
      margin-top: 1.5rem;
    }

    @media (min-width: 72rem) {
      .sl-container {
        margin-inline: var(--sl-content-margin-inline, auto);
      }
    }
  }
</style>
