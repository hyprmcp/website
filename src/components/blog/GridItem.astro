---
import type {Post, PostData} from '../../types';
import Image from '~/components/common/Image.astro';

export interface Props {
  post: PostData;
}

const {post} = Astro.props;
---

<article class="mb-6">
  <div
    class="relative md:h-64 bg-gray-400 dark:bg-slate-700 rounded shadow-lg mb-6">
    {
      post.image && (
        <a href={post.slug}>
          <Image
            src={post.image}
            class="w-full md:h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
            width={400}
            alt={post.title}
            aspectRatio="16:9"
            layout="cover"
            loading="lazy"
            decoding="async"
          />
        </a>
      )
    }
  </div>

  <h3
    class="text-xl sm:text-2xl font-bold leading-tight mb-2 font-heading dark:text-slate-300">
    {
      post.slug ? (
        <a class="hover:text-primary dark:hover:text-blue-700" href={'/blog/' + post.slug}>
          {post.title}
        </a>
      ) : (
        post.title
      )
    }
  </h3>

  <p class="text-muted dark:text-slate-400 text-lg">
    {post.description}
  </p>
</article>
