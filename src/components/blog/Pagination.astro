---
import {Icon} from '@astrojs/starlight/components';
import {getPermalink} from '~/utils/permalinks';
import Button from '~/components/ui/Button.astro';

export interface Props {
  prevUrl?: string;
  nextUrl?: string;
  prevText?: string;
  nextText?: string;
}

const {
  prevUrl,
  nextUrl,
  prevText = 'Newer posts',
  nextText = 'Older posts',
} = Astro.props;
---

{
  (prevUrl || nextUrl) && (
    <div class="container flex">
      <div class="flex flex-row mx-auto container justify-between">
        <Button
          variant="tertiary"
          class={`md:px-3 px-3 mr-2 ${!prevUrl ? 'invisible' : ''}`}
          href={prevUrl ? getPermalink(prevUrl) : undefined}>
          <Icon name="chevron-left" size="1.5rem" />
          <p class="ml-2">{prevText}</p>
        </Button>

        <Button
          variant="tertiary"
          class={`md:px-3 px-3 ${!nextUrl ? 'invisible' : ''}`}
          href={nextUrl ? getPermalink(nextUrl) : undefined}>
          <span class="mr-2">{nextText}</span>
          <Icon name="chevron-right" size="1.5rem" />
        </Button>
      </div>
    </div>
  )
}
