---
import ThemeProvider from 'virtual:starlight/components/ThemeProvider';
import ThemeSelect from 'virtual:starlight/components/ThemeSelect';
import ThemedImage from '../util/ThemedImage.astro';
import hyprmcpBlack from '../../assets/hyprmcp.svg';
import hyprmcpWhite from '../../assets/hyprmcp.svg';

export interface FooterLink {
  href: string;
  text: string;
}

export interface Props {
  tagline?: string;
  links?: FooterLink[];
}

const {
  tagline = 'Built for MCP developers and product managers.',
  links = [
    {href: '/docs/', text: 'Documentation'},
    {href: '/pricing/', text: 'Pricing'},
    {href: 'https://github.com/hyprmcp', text: 'GitHub'},
  ],
} = Astro.props;
---

<footer
  class="bg-white dark:bg-slate-900 border-t border-gray-200 dark:border-gray-800">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="flex items-center mb-4 md:mb-0">
        <ThemedImage
          lightSrc={hyprmcpBlack}
          darkSrc={hyprmcpWhite}
          alt="Hypr MCP Logo"
          class="w-36 mr-8"
        />
        <div class="flex flex-col">
          <span class="text-2xl font-bold text-gray-900 dark:text-white"
            >Hypr MCP</span
          >
          <span class="text-sm text-gray-600 dark:text-gray-400 max-w-64"
            >{tagline}</span
          >
        </div>
      </div>

      <div class="flex flex-wrap justify-center gap-6 mb-4 md:mb-0">
        {
          links.map(link => (
            <a
              href={link.href}
              class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
              {link.text}
            </a>
          ))
        }
      </div>

      <div class="flex items-center space-x-4">
        <ThemeProvider />
        <ThemeSelect />
      </div>
    </div>

    <div
      class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800 text-center text-sm text-gray-600 dark:text-gray-400">
      <p>&copy; 2025 Hypr MCP. All rights reserved.</p>
    </div>
  </div>
</footer>
