<section id="features" class="py-24 sm:py-32 bg-white dark:bg-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Fast Setup -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-24">
      <!-- Left Side: Fast Setup Visual -->
      <div class="flex flex-col justify-center">
        <div
          class="bg-gradient-to-br from-green-50 to-blue-50 dark:from-green-900/20 dark:to-blue-900/20 rounded-xl p-8">
          <div class="text-center space-y-6">
            <div
              class="w-20 h-20 bg-gradient-to-br from-green-500 to-blue-500 rounded-full mx-auto flex items-center justify-center">
              <svg
                class="w-10 h-10 text-white"
                fill="currentColor"
                viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="space-y-3">
              <div class="flex items-center justify-center space-x-2">
                <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse">
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  Initializing...
                </div>
              </div>
              <div class="flex items-center justify-center space-x-2">
                <div
                  class="w-3 h-3 bg-blue-500 rounded-full animate-pulse"
                  style="animation-delay: 0.5s">
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  Deploying MCP...
                </div>
              </div>
              <div class="flex items-center justify-center space-x-2">
                <div
                  class="w-3 h-3 bg-green-500 rounded-full animate-pulse"
                  style="animation-delay: 1s">
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  Ready in days!
                </div>
              </div>
            </div>
            <div
              class="flex justify-center space-x-4 text-xs text-gray-500 dark:text-gray-400">
              <span>Setup</span>
              <span>•</span>
              <span>Deploy</span>
              <span>•</span>
              <span>Launch</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Side: Fast Setup Description -->
      <div class="flex flex-col justify-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">
          Fast Setup
        </h2>
        <p
          class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
          Get your remote MCP server live and ready in days. No complex
          configuration or setup. Stay ahead of the curve and connect your
          application to ChatGPT, AI agents, and IDEs now.
        </p>
      </div>
    </div>

    <!-- Built-in Analytics -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-24">
      <!-- Left Side: Built-in Analytics Description -->
      <div class="flex flex-col justify-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">
          Built-in Analytics
        </h2>
        <p
          class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
          Track tool usage, clients, and performance at a glance. Get
          comprehensive insights into your MCP server performance with real-time
          dashboards, usage metrics, and detailed analytics to optimize your AI
          applications.
        </p>
      </div>

      <!-- Right Side: Analytics Visual -->
      <div class="flex flex-col justify-center">
        <div
          class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-8">
          <div class="text-center space-y-6">
            <div
              class="w-20 h-20 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full mx-auto flex items-center justify-center">
              <svg
                class="w-10 h-10 text-white"
                fill="currentColor"
                viewBox="0 0 20 20">
                <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
              </svg>
            </div>
            <div class="space-y-3">
              <div class="flex items-center justify-center space-x-2">
                <div class="w-3 h-3 bg-purple-500 rounded-full animate-pulse">
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  Tracking usage...
                </div>
              </div>
              <div class="flex items-center justify-center space-x-2">
                <div
                  class="w-3 h-3 bg-pink-500 rounded-full animate-pulse"
                  style="animation-delay: 0.5s">
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  Analyzing performance...
                </div>
              </div>
              <div class="flex items-center justify-center space-x-2">
                <div
                  class="w-3 h-3 bg-purple-500 rounded-full animate-pulse"
                  style="animation-delay: 1s">
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                  Insights ready!
                </div>
              </div>
            </div>
            <div
              class="flex justify-center space-x-4 text-xs text-gray-500 dark:text-gray-400">
              <span>Track</span>
              <span>•</span>
              <span>Analyze</span>
              <span>•</span>
              <span>Optimize</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Monitored & Secure -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Left Side: Monitored & Secure Visual -->
      <div class="flex flex-col justify-center">
        <div
          class="bg-gradient-to-br from-purple-50 to-red-50 dark:from-purple-900/20 dark:to-red-900/20 rounded-xl p-8">
          <div class="text-center space-y-6">
            <div class="flex justify-center space-x-4">
              <div class="text-center">
                <div
                  class="w-12 h-12 bg-purple-500 rounded-lg mx-auto mb-2 flex items-center justify-center">
                  <svg
                    class="w-6 h-6 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="text-xs text-gray-600 dark:text-gray-400">Auth</div>
              </div>
              <div class="text-center">
                <div
                  class="w-12 h-12 bg-red-500 rounded-lg mx-auto mb-2 flex items-center justify-center">
                  <svg
                    class="w-6 h-6 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="text-xs text-gray-600 dark:text-gray-400">
                  Encrypt
                </div>
              </div>
              <div class="text-center">
                <div
                  class="w-12 h-12 bg-green-500 rounded-lg mx-auto mb-2 flex items-center justify-center">
                  <svg
                    class="w-6 h-6 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="text-xs text-gray-600 dark:text-gray-400">
                  Monitor
                </div>
              </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-lg">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-gray-900 dark:text-white"
                  >Security Status</span
                >
                <div class="flex items-center space-x-1">
                  <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                  <span class="text-xs text-green-600 dark:text-green-400"
                    >Active</span
                  >
                </div>
              </div>
              <div class="space-y-2">
                <div class="flex justify-between text-xs">
                  <span class="text-gray-600 dark:text-gray-400"
                    >Authentication</span
                  >
                  <span class="text-green-600 dark:text-green-400">✓</span>
                </div>
                <div class="flex justify-between text-xs">
                  <span class="text-gray-600 dark:text-gray-400"
                    >Encryption</span
                  >
                  <span class="text-green-600 dark:text-green-400">✓</span>
                </div>
                <div class="flex justify-between text-xs">
                  <span class="text-gray-600 dark:text-gray-400"
                    >High Availability</span
                  >
                  <span class="text-green-600 dark:text-green-400">✓</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Side: Monitored & Secure Description -->
      <div class="flex flex-col justify-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">
          Monitored & Secure
        </h2>
        <p
          class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
          Authentication, encryption, and high availability included.
          Enterprise-grade security with real-time monitoring, automatic
          failover, and comprehensive audit trails. Your MCP servers are
          protected with industry-standard security measures.
        </p>
      </div>
    </div>
  </div>
</section>
