      <!-- Standard Protocol -->
      <div class="text-center">
        <div
          class="w-16 h-16 bg-gradient-to-br from-green-500 to-blue-500 rounded-full mx-auto mb-6 flex items-center justify-center">
          <svg
            class="w-8 h-8 text-white"
