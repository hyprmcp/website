---
import ThemedImage from '../../util/ThemedImage.astro';
import hyprmcpBlack from '../../../assets/hyprmcp-black.svg';
import hyprmcpWhite from '../../../assets/hyprmcp-white.svg';

interface Props {
  navLinks?: Array<{href: string; text: string}>;
  ctaHref?: string;
  ctaText?: string;
  demoHref?: string;
}

const {navLinks, ctaHref, ctaText = 'Get Started', demoHref} = Astro.props;
---

<nav
  class="fixed top-0 w-full bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <ThemedImage
          lightSrc={hyprmcpBlack}
          darkSrc={hyprmcpWhite}
          alt="Hypr MCP Logo"
          class="w-14 h-14"
        />
      </div>

      <div class="hidden md:flex space-x-8">
        {
          navLinks.map(link => (
            <a
              href={link.href}
              class="text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
              {link.text}
            </a>
          ))
        }
      </div>

      <div class="flex items-center space-x-3">
        {
          demoHref && (
            <a
              href={demoHref}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center text-gray-900 rounded-full border border-gray-200 dark:border-gray-700 transition-all dark:text-white no-underline">
              <span class="px-4 py-2 bg-white dark:bg-gray-900 rounded-full text-center hover:bg-gray-50 dark:hover:bg-gray-800 transition-all text-sm font-medium">
                Book Demo
              </span>
            </a>
          )
        }
        <a
          href={ctaHref}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center text-gray-900 rounded-full border border-gray-200 dark:border-gray-700 transition-all dark:text-white no-underline">
          <span
            class="px-4 py-2 bg-gray-900 text-white dark:bg-white dark:text-gray-900 rounded-full text-center hover:bg-gray-800 dark:hover:bg-gray-200 transition-all text-sm font-medium">
            {ctaText}
          </span>
        </a>
      </div>
    </div>
  </div>
</nav>
