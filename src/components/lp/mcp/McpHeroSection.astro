---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "From Zero to MCP ‚Äî in Days, Not Weeks",
  description = "We build, host, and monitor your remote MCP so your application works instantly with ChatGPT, AI agents, and IDEs."
} = Astro.props;
---

<section class="relative overflow-hidden bg-gray-50 dark:bg-slate-900 pt-32 pb-24">
  <div class="absolute inset-0 bg-gradient-to-br from-green-50/50 via-transparent to-orange-50/50 dark:from-blue-900/20 dark:via-transparent dark:to-purple-900/20"></div>

  <div class="relative w-full px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold tracking-tight mb-8 sm:text-5xl lg:text-6xl text-gray-900 dark:text-white">
        {title}
      </h1>
      <p class="mt-6 text-lg leading-8 text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
        {description}
      </p>

      <!-- Hero SVG Diagram -->
      <div class="mt-12 max-w-5xl mx-auto">
        <svg class="w-full h-auto" viewBox="0 0 1200 400" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <!-- Grid Pattern -->
            <pattern id="hero-grid" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5" class="text-gray-300 dark:text-gray-700" opacity="0.4"/>
            </pattern>

            <!-- Animated Gradient -->
            <linearGradient id="hero-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" stop-color="#22C55E">
                <animate attributeName="stop-color" values="#22C55E;#F97316;#22C55E" dur="6s" repeatCount="indefinite"/>
              </stop>
              <stop offset="100%" stop-color="#F97316">
                <animate attributeName="stop-color" values="#F97316;#22C55E;#F97316" dur="6s" repeatCount="indefinite"/>
              </stop>
            </linearGradient>

            <!-- Dark mode gradient -->
            <linearGradient id="hero-gradient-dark" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" stop-color="#3B82F6">
                <animate attributeName="stop-color" values="#3B82F6;#A855F7;#3B82F6" dur="6s" repeatCount="indefinite"/>
              </stop>
              <stop offset="100%" stop-color="#A855F7">
                <animate attributeName="stop-color" values="#A855F7;#3B82F6;#A855F7" dur="6s" repeatCount="indefinite"/>
              </stop>
            </linearGradient>
          </defs>

          <rect width="1200" height="400" fill="url(#hero-grid)" opacity="0.3"/>

          <!-- Left side: AI Clients -->
          <!-- ChatGPT -->
          <g transform="translate(130, 100)">
            <rect x="-80" y="-25" width="160" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <circle cx="-50" cy="0" r="12" fill="#10B981" opacity="0.2"/>
            <text x="-50" y="5" text-anchor="middle" class="text-xs">ü§ñ</text>
            <text x="15" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">ChatGPT</text>
          </g>

          <!-- AI Agents -->
          <g transform="translate(130, 200)">
            <rect x="-80" y="-25" width="160" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <circle cx="-50" cy="0" r="12" fill="#3B82F6" opacity="0.2"/>
            <text x="-50" y="5" text-anchor="middle" class="text-xs">üë§</text>
            <text x="15" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">AI Agents</text>
          </g>

          <!-- Cursor -->
          <g transform="translate(130, 300)">
            <rect x="-80" y="-25" width="160" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <circle cx="-50" cy="0" r="12" fill="#8B5CF6" opacity="0.2"/>
            <text x="-50" y="5" text-anchor="middle" class="text-xs">‚ö°</text>
            <text x="15" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">Cursor</text>
          </g>

          <!-- Connection lines from left to center -->
          <path d="M 210 100 L 390 200" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>
          <path d="M 210 200 L 390 200" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>
          <path d="M 210 300 L 390 200" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>

          <!-- Animated dots left to right -->
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 210 100 L 390 200"/>
          </circle>
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 210 200 L 390 200" begin="1s"/>
          </circle>
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 210 300 L 390 200" begin="2s"/>
          </circle>

          <!-- Animated dots right to left (return path) -->
          <circle r="3" fill="#10B981" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 390 200 L 210 100" begin="1.5s"/>
          </circle>
          <circle r="3" fill="#10B981" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 390 200 L 210 200" begin="2.5s"/>
          </circle>
          <circle r="3" fill="#10B981" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 390 200 L 210 300" begin="0.5s"/>
          </circle>

          <!-- Central MCP Server Box -->
          <g transform="translate(600, 200)">
            <!-- Main container with solid background -->
            <rect id="platform-container" x="-210" y="-130" width="420" height="260" rx="12" fill="#F9FAFB" stroke="#E5E7EB" stroke-width="1" class="fill-purple-50 stroke-purple-400 dark:fill-slate-800 "/>

            <!-- Top row features -->
            <g transform="translate(-95, -95)">
              <rect x="-85" y="-22" width="170" height="44" rx="22" fill="white" stroke="#E5E7EB" stroke-width="1" class="dark:fill-slate-800 dark:stroke-slate-700"/>
              <text text-anchor="middle" y="5" class="fill-gray-700 dark:fill-gray-300 text-sm">Analytics</text>
            </g>

            <g transform="translate(95, -95)">
              <rect x="-85" y="-22" width="170" height="44" rx="22" fill="white" stroke="#E5E7EB" stroke-width="1" class="dark:fill-slate-800 dark:stroke-slate-700"/>
              <text text-anchor="middle" y="5" class="fill-gray-700 dark:fill-gray-300 text-sm">Memory</text>
            </g>

            <!-- Central MCP Server -->
            <rect x="-100" y="-50" width="200" height="100" rx="8" fill="#DBEAFE" stroke="#3B82F6" stroke-width="0.5" class="dark:fill-blue-900/30 dark:stroke-blue-500"/>
            <text y="5" text-anchor="middle" class="fill-blue-900 dark:fill-blue-100 text-base">Your Application</text>

            <!-- Bottom row features -->
            <g transform="translate(-95, 95)">
              <rect x="-85" y="-22" width="170" height="44" rx="22" fill="white" stroke="#E5E7EB" stroke-width="1" class="dark:fill-slate-800 dark:stroke-slate-700"/>
              <text text-anchor="middle" y="5" class="fill-gray-700 dark:fill-gray-300 text-sm">Auth</text>
            </g>

            <g transform="translate(95, 95)">
              <rect x="-85" y="-22" width="170" height="44" rx="22" fill="white" stroke="#E5E7EB" stroke-width="1" class="dark:fill-slate-800 dark:stroke-slate-700"/>
              <text text-anchor="middle" y="5" class="fill-gray-700 dark:fill-gray-300 text-sm">Hosting</text>
            </g>

            <!-- Platform label with gradient text -->
            <defs>
              <linearGradient id="text-gradient-light" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" stop-color="#3B82F6"/>
                <stop offset="100%" stop-color="#8B5CF6"/>
              </linearGradient>
              <linearGradient id="text-gradient-dark" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" stop-color="#60A5FA"/>
                <stop offset="100%" stop-color="#A78BFA"/>
              </linearGradient>
            </defs>
            <text id="platform-label" y="-150" text-anchor="middle" class="text-lg" fill="url(#text-gradient-light)">Jetski MCP Platform</text>
          </g>

          <!-- Right side: Access Types -->
          <!-- Database Access -->
          <g transform="translate(1070, 80)">
            <rect x="-90" y="-25" width="180" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <rect x="-70" y="-10" width="20" height="20" rx="4" fill="#F59E0B" opacity="0.2"/>
            <text x="-60" y="5" text-anchor="middle" class="text-xs">üóÑÔ∏è</text>
            <text x="20" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">Database access</text>
          </g>

          <!-- Files Access -->
          <g transform="translate(1070, 150)">
            <rect x="-90" y="-25" width="180" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <rect x="-70" y="-10" width="20" height="20" rx="4" fill="#10B981" opacity="0.2"/>
            <text x="-60" y="5" text-anchor="middle" class="text-xs">üìÅ</text>
            <text x="20" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">Files access</text>
          </g>

          <!-- API Access -->
          <g transform="translate(1070, 220)">
            <rect x="-90" y="-25" width="180" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <rect x="-70" y="-10" width="20" height="20" rx="4" fill="#EF4444" opacity="0.2"/>
            <text x="-60" y="5" text-anchor="middle" class="text-xs">üîó</text>
            <text x="20" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">API access</text>
          </g>

          <!-- Docs Access -->
          <g transform="translate(1070, 290)">
            <rect x="-90" y="-25" width="180" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <rect x="-70" y="-10" width="20" height="20" rx="4" fill="#3B82F6" opacity="0.2"/>
            <text x="-60" y="5" text-anchor="middle" class="text-xs">üìÑ</text>
            <text x="20" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">Docs access</text>
          </g>

          <!-- User Information Access -->
          <g transform="translate(1070, 360)">
            <rect x="-90" y="-25" width="180" height="50" rx="25" fill="white" stroke="#E5E7EB" stroke-width="2" class="dark:fill-slate-800 dark:stroke-slate-600"/>
            <rect x="-70" y="-10" width="20" height="20" rx="4" fill="#8B5CF6" opacity="0.2"/>
            <text x="-60" y="5" text-anchor="middle" class="text-xs">üë§</text>
            <text x="20" y="5" text-anchor="middle" class="fill-gray-900 dark:fill-white font-medium text-sm">User information</text>
          </g>

          <!-- Connection lines from center to right -->
          <path d="M 810 200 L 980 80" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>
          <path d="M 810 200 L 980 150" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>
          <path d="M 810 200 L 980 220" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>
          <path d="M 810 200 L 980 290" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>
          <path d="M 810 200 L 980 360" stroke="#3B82F6" stroke-width="2" opacity="0.3" class="dark:stroke-blue-400"/>

          <!-- Animated dots to right -->
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 810 200 L 980 80"/>
          </circle>
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 810 200 L 980 150" begin="0.5s"/>
          </circle>
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 810 200 L 980 220" begin="1s"/>
          </circle>
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 810 200 L 980 290" begin="1.5s"/>
          </circle>
          <circle r="3" fill="#3B82F6">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 810 200 L 980 360" begin="2s"/>
          </circle>

          <!-- Animated dots from right to left (return path) -->
          <circle r="3" fill="#F59E0B" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 980 80 L 810 200" begin="1.2s"/>
          </circle>
          <circle r="3" fill="#F59E0B" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 980 150 L 810 200" begin="1.7s"/>
          </circle>
          <circle r="3" fill="#F59E0B" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 980 220 L 810 200" begin="2.2s"/>
          </circle>
          <circle r="3" fill="#F59E0B" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 980 290 L 810 200" begin="2.7s"/>
          </circle>
          <circle r="3" fill="#F59E0B" opacity="0.7">
            <animateMotion dur="3s" repeatCount="indefinite" path="M 980 360 L 810 200" begin="0.2s"/>
          </circle>
        </svg>
      </div>

      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="https://tally.so/r/woj4kX"
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 bg-gray-900 text-white dark:bg-white dark:text-gray-900 rounded-full hover:bg-gray-800 dark:hover:bg-gray-200 transition-all no-underline">
          Get Started
        </a>
      </div>
    </div>
  </div>
</section>
