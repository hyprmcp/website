---
import JetskiButton from '../../util/JetskiButton.astro';

const title = 'Ready to illuminate your MCP server?';
const description =
  'Start understanding your users today. Get instant access to powerful analytics that help you build better MCP experiences.';
const primaryCTA = {
  text: 'Get Started Free',
  href: '/waitlist/',
};
const secondaryCTA = {
  text: 'Book a Demo',
  href: 'https://cal.glasskube.com/team/hyprmcp/mcp-analytics',
};
const benefits = [
  'No credit card required',
  '5-minute setup',
  'GDPR compliant',
];
---

<style>
  .cta-gradient {
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.1) 0%,
      rgba(168, 85, 247, 0.1) 100%
    );
  }

  .dark .cta-gradient {
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.2) 0%,
      rgba(168, 85, 247, 0.2) 100%
    );
  }
</style>

<div id="get-started" class="bg-gray-50 dark:bg-slate-900">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
    <div
      class="relative isolate overflow-hidden bg-white dark:bg-gray-800 rounded-3xl shadow-2xl cta-gradient">
      <div class="px-6 py-16 sm:px-16 sm:py-24 lg:px-24">
        <div class="mx-auto max-w-2xl text-center">
          <a
            href="#get-started"
            class="inline-flex items-center rounded-full bg-yellow-100 dark:bg-yellow-900/30 px-4 py-1.5 text-sm font-medium text-yellow-800 dark:text-yellow-200 mb-6 hover:bg-yellow-200 dark:hover:bg-yellow-900/50 transition-colors cursor-pointer">
            <svg
              class="w-4 h-4 mr-1.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Get Started
          </a>
          <h2
            class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
            Ready to <span class="text-yellow-600 dark:text-yellow-400"
              >illuminate</span
            > your MCP server?
          </h2>
          <p
            class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-600 dark:text-gray-300">
            {description}
          </p>

          <div
            class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
            <JetskiButton href={primaryCTA.href} variant="primary">
              {primaryCTA.text}
            </JetskiButton>
            <JetskiButton href={secondaryCTA.href} variant="secondary">
              {secondaryCTA.text}
            </JetskiButton>
          </div>

          <div
            class="mt-8 flex items-center justify-center space-x-6 text-sm text-gray-600 dark:text-gray-400">
            {
              benefits.map(benefit => (
                <div class="flex items-center">
                  <svg
                    class="h-5 w-5 text-green-500 mr-2"
                    fill="currentColor"
                    viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {benefit}
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <div class="absolute -top-24 -right-24 opacity-20">
        <svg
          width="400"
          height="400"
          viewBox="0 0 400 400"
          class="text-purple-600 dark:text-purple-400">
          <defs>
            <pattern
              id="grid"
              width="40"
              height="40"
              patternUnits="userSpaceOnUse">
              <path
                d="M 40 0 L 0 0 0 40"
                fill="none"
                stroke="currentColor"
                stroke-width="1"
                opacity="0.3"></path>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid)"></rect>
        </svg>
      </div>
    </div>
  </div>
</div>
